#!/usr/bin/env node
var romulus = require('..');
var cwd     = process.cwd();
var options = {
  layouts : cwd + '/layouts',
  pages   : cwd + '/pages',
  public  : cwd + '/public',
  port    : 8080,
};

var server = romulus.createServer(options);
server.on('listening', function() {
  console.log('Building your empire at http://localhost:' + options.port + '/ ...');
});
